---
import Analytics from "@vercel/analytics/astro";
import "../styles/global.css";

const {
	title = "Guru Â· Agentic Harness & Sovereign OS",
	description = "Guru is the agentic harness that lets frontier swarms execute high-privilege work permissionlessly while humans retain absolute governance.",
} = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-[hsl(var(--background))] no-js">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Space+Grotesk:wght@400;500;600&family=JetBrains+Mono:wght@400;500&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body
		class="min-h-screen bg-[hsl(var(--background))] text-[hsl(var(--foreground))] antialiased"
	>
		<script is:inline>
			// Switch from no-js to js as soon as possible so CSS can target JS-capable browsers
			document.documentElement.classList.remove('no-js');
			document.documentElement.classList.add('js');
		</script>
		<Analytics />
		<slot />
		<script is:inline>
			// Guard for safety in environments where window is not available
			if (typeof window !== 'undefined' && 'IntersectionObserver' in window) {
				const observer = new IntersectionObserver(
					(entries) => {
						for (const entry of entries) {
							if (entry.isIntersecting) {
								entry.target.classList.add('sa--visible');
								observer.unobserve(entry.target);
							}
						}
					},
					{ threshold: 0.12 }
				);

				window.addEventListener('DOMContentLoaded', () => {
					// Use standard DOM APIs here; no TypeScript generics so this runs in the browser
					Array.from(document.querySelectorAll('.sa')).forEach((el) => {
						observer.observe(el);
					});
				});
			} else if (typeof window !== 'undefined') {
				// Fallback: if IntersectionObserver is not supported, just reveal all sections
				window.addEventListener('DOMContentLoaded', () => {
					Array.from(document.querySelectorAll('.sa')).forEach((el) => {
						el.classList.add('sa--visible');
					});
				});
			}
		</script>
	</body>
</html>
