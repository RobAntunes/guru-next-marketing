---
const year = new Date().getFullYear();
const footerLinks = [
	{ href: '#product', label: 'Product' },
	{ href: '#architecture', label: 'Architecture' },
	{ href: '#safety', label: 'Governance' },
	{ href: '#async', label: 'Async UX' },
	{ href: '#workbench', label: 'Workbench' },
];
---

<footer class="border-t border-[hsl(var(--border))]/70 bg-[hsl(var(--background))]">
	<div class="mx-auto flex max-w-6xl flex-col gap-4 px-4 py-8 text-[11px] text-[hsl(var(--muted-foreground))] sm:flex-row sm:items-center sm:justify-between sm:px-6 lg:px-8">
		<div class="flex items-center gap-2">
			<span class="flex h-8 w-8 items-center justify-center rounded-lg border border-[hsl(var(--border))] bg-[hsl(var(--card))] text-sm font-semibold tracking-tight text-[hsl(var(--primary))]">G</span>
			<div class="flex flex-col">
				<span class="text-xs font-semibold text-[hsl(var(--foreground))]">Guru</span>
				<span>Agentic Harness & Sovereign OS</span>
			</div>
		</div>

		<div class="flex flex-wrap items-center gap-3">
			<span>Â© {year} Guru Labs.</span>
			{footerLinks.map((item) => (
				<a
					href={item.href}
					class="transition-colors hover:text-[hsl(var(--foreground))]"
				>
					{item.label}
				</a>
			))}
		</div>
	</div>
</footer>

